{
    "name": "spherevista360/newsletter-integration",
    "description": "Modular WordPress newsletter integration with Mailchimp API support",
    "type": "wordpress-plugin",
    "version": "1.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "SphereVista360",
            "email": "contact@spherevista360.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "SphereVista360\\Newsletter\\": "includes/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=WordPress includes/ assets/",
        "lint-fix": "phpcbf --standard=WordPress includes/ assets/"
    },
    "keywords": [
        "wordpress",
        "newsletter",
        "mailchimp",
        "email-marketing",
        "wordpress-plugin"
    ],
    "support": {
        "issues": "https://github.com/spv360/spherevista360/issues",
        "source": "https://github.com/spv360/spherevista360"
    }
}