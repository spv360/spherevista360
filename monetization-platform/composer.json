{
  "name": "spherevista360/monetization-platform",
  "description": "WordPress Monetization SaaS Platform - Complete toolkit for site owners to monetize effectively",
  "scripts": {
    "start": "php -S localhost:8000 core/bootstrap.php",
    "test": "phpunit",
    "lint": "phpcs --standard=PSR12 core/ modules/ api/",
    "docker:build": "docker build -t spherevista360/monetization .",
    "docker:run": "docker run -p 8080:80 spherevista360/monetization",
    "deploy": "./scripts/deploy.sh"
  },
  "license": "GPL-3.0-or-later",
  "require": {
    "stripe/stripe-php": "^10.0",
    "paypal/paypal-checkout-sdk": "^1.0",
    "mailchimp/marketing": "^3.0",
    "google/apiclient": "^2.0",
    "monolog/monolog": "^3.0",
    "symfony/http-foundation": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.0",
    "phpmd/phpmd": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "SphereVista360\\Monetization\\": "core/",
      "SphereVista360\\Modules\\": "modules/",
      "SphereVista360\\API\\": "api/"
    }
  },
  "config": {
    "platform": {
      "php": "8.1"
    }
  }
}